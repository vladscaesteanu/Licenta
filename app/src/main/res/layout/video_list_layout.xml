<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/movie_thumb_width"
        android:layout_height="@dimen/movie_thumb_height"
        android:layout_marginTop="10dp"
        android:src="@android:color/background_dark"
        android:id="@+id/list_movie_bitmap"
        android:transitionName="movie_image"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="list_movie_title"
            android:id="@+id/list_movie_title"
            android:transitionName="movie_title"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="list_movie_desc"
            android:id="@+id/list_movie_desc"
            android:transitionName="movie_desc"/>

    </LinearLayout>

    

</LinearLayout>